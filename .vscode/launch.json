{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "faker-apphost [http]",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\src\\dotnet\\faker-apphost\\faker-apphost.csproj"
        },
        {
            "name": "faker-cli",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/dotnet/faker-cli/bin/Debug/net10.0/faker-cli.dll",
            "args": [
                "prompt", "\"Please show me the trades for today.  I am interested in instrument 123, deliver 456.  The results should be formatted as a markdown table.\""
            ],
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}
